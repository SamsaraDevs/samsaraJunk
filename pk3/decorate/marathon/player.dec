actor MarathonPuff : BulletPuff
{
    RenderStyle ADD
    Alpha 1
    Scale 0.5
    SeeSound "puff/ric"
    +FLOORCLIP
    +NOEXTREMEDEATH
    +FORCEXYBILLBOARD
    //+CLIENTSIDEONLY - Enabling this has it spawn when the bullets hit bleeding objects. WAT?
    -SOLID
    States
    {
      Spawn:
        TNT1 A 0
        TNT1 A 0 Bright A_PlaySound("puff/ric")
        MPFF ABCDEFG 2 Bright
        stop
    }
}
