actor SamsaraMaceSpawner: SpecialSpot replaces MaceSpawner
{
    +NOBLOCKMAP
    +NOSECTOR

    States
    {
      Spawn:
        TNT1 A 0
        TNT1 A -1 A_SpawnSingleItem("SamsaraSlotSevenPickupF", 0, 0, 0)
        stop
    }
}

actor ThunderboltDummy: CustomInventory
{
    +QUIET
    +AUTOACTIVATE
    +FLOORHUGGER
    +CLIENTSIDEONLY

    Inventory.PickupMessage ""
    Inventory.MaxAmount 0

    States
    {
      Spawn:
        QLTG Z 38
        stop

      Pickup:
        TNT1 A 0 A_JumpIf(ACS_ExecuteWithResult(SAMSARA_DECORATE, 17, 1), "PickupFail")
        stop

      PickupFail:
        TNT1 A 0
        fail
    }
}
